<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/incoming_call_bg_color">  <!-- Background can also be set programmatically in IncomingCallActivity.kt -->

    <!-- Caller Info Section -->
    <!-- Top padding ensures the content is not cut off by status bar -->
    <LinearLayout
        android:id="@+id/llBackground"
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="150dp"
        android:paddingBottom="100dp">

        <!-- Avatar Image -->
        <!-- Loaded from EXTRA_CALLKEEP_AVATAR, invisible by default until set -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo"
            android:visibility="invisible"/>

        <!-- Caller Name -->
        <!-- Defaults to 'Unknown' if EXTRA_CALLKEEP_CALLER_NAME is not provided -->
        <TextView
            android:id="@+id/tvCallerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/caller_name"
            android:textSize="26sp"
            android:textColor="@android:color/white"/>

        <!-- Call Header / Subtitle -->
        <!-- Loaded from EXTRA_CALLKEEP_CONTENT_TITLE -->
        <TextView
            android:id="@+id/tvCallHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/content_title"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <!-- Action Buttons Section (Accept / Decline) -->
    <!-- Positioned at the bottom of the screen using layout_alignParentBottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:weightSum="2">

        <!-- Decline Button Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="60dp">

            <ImageButton
                android:id="@+id/btnDecline"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/decline_background"
                android:src="@drawable/ic_decline"
                android:scaleType="fitCenter"
                android:contentDescription="Decline"
                android:padding="15dp" />

            <!-- Label below the button -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Accept Button Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="60dp">

            <ImageButton
                android:id="@+id/btnAnswer"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/answer_background"
                android:src="@drawable/ic_accept"
                android:scaleType="fitCenter"
                android:contentDescription="Accept"
                android:padding="15dp" />

            <!-- Label below the button -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
